{% extends 'base.html.twig' %}

{% block title %}Generate PDF{% endblock %}

{% block body %}
    <style>
        main{
            margin-top: 50px;
        }
    </style>

    <h1>Generate PDF</h1>
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.pdfName) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.url) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}